<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/gradient">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Welcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="#FFE920"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Already have an Account ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="2dp"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnlogin"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:drawableBottom="@drawable/ic_baseline_brightness_1_24"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:text="Signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/circle"
            android:layout_width="440dp"
            android:layout_height="440dp">
            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="65dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="Signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etName"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_vpn_key_24"
                android:layout_marginLeft="65dp"
                android:hint="Name"
                android:layout_width="320dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/etRegEmail"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_perm_identity_24"
                android:layout_marginLeft="65dp"
                android:hint="Email or user name"
                android:layout_width="320dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/etRegPass"
                android:password="true"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_vpn_key_24"

                android:layout_marginLeft="65dp"
                android:hint="Password"
                android:layout_width="320dp"
                android:layout_height="50dp"/>
            <EditText
                android:password="true"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_vpn_key_24"
                android:layout_marginLeft="65dp"
                android:hint="Enter the password"
                android:layout_width="320dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/signup"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="#FFE920"
                android:layout_marginLeft="65dp"
                android:text="Signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            android:text="Already have an account Login?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="Also login with:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_marginLeft="15dp"
                android:background="@drawable/facebook"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <ImageButton
                android:layout_marginLeft="20dp"
                android:background="@drawable/google"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>